<%= form_for @list do |f| %>
	<p>
		<%= f.label :name %>
	</p>
	<p>
		<%= f.text_field :name, placeholder: "List name..." %>
	<p>
		<%= label_tag "Enter your words:" %>
	</p>
	<p>
		<%= text_area_tag(:words) %>
	</p>
		<% if @list.words.count != 0 %>
	<p>
			Here are the words on your list:
	</p>
			<% @wordlists.each do |w| %>
				<%= div_for w do %>
				<p>
					<%= w.word.name %>
					<%= w.word.definition %>
					<%= link_to "Delete", wordlist_path(w), method: 'delete', remote: true %>
				</p>
				<% end %>
			<% end %>
		<% end %>
	<%= f.submit %>
<% end %>