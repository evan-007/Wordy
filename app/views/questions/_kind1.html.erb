<% unless @question.text == nil %>
    <%= ng_clean(to_blank(@question.text, @question.word)) %><br /><br />
<% else %>
    <%= to_blank((get_text(@question.word)), @question.word)  %>
<% end %>

What's the answer?
<br /><br />
<%= form_for @question, url: {action: "grade"} do |f| %>
    <%= f.select(:guess, options_for_select(@question.answer.shuffle)) %><br /><br /><br />
    <%= f.submit "Next" %>
<% end %> 
