<h2>Sign up</h2>
<%= link_to image_tag('fb-login-button.png'), user_omniauth_authorize_path(:facebook) %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div></br>

  <div><%= f.label :city %><br />
  <%= f.text_field :city, placeholder: 'San Francisco, USA' %><br /></div>  

  <div>Upload an avatar<br />
  <div><%= f.label :avatar %><br />
  	<%= f.file_field :avatar %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
